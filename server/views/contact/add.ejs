<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>

            <form class= "form" method="POST">

                <div class="form-group">
                    <lable for="nameTextField"> Name </lable>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Contact Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <lable for="numberTextField"> Number </lable>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter Contact Number"
                    name="number" required>
                </div>

                <div class="form-group">
                    <lable for="emailTextField"> Email Address </lable>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter Email Address"
                    name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit 
                </button>

                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel 
                </a>

            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>